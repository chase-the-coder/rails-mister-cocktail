<div class="background">
  <div class="custom-container border d-flex justify-content-around">
    <div>
      <%= image_tag @cocktail.thumbnail, class: "image-thumbnail rounded" %>
    </div>
    <div class="description border">
      <h1 class="western text-center"><%= @cocktail.name %></h1>
      <h2 class="text-center">The ingredients</h2>
      <ul>
        <% array = (1..15).to_a%>
        <% array.each do |n| %>
          <% unless @cocktail["strIngredient#{n}"].nil?%>
          <p id="ingredient"><i class="fas fa-bullseye"></i>  <%= @cocktail["strMeasure#{n}"] %>- <%= @cocktail["strIngredient#{n}"] %></p>
          <% end %>
        <% end %>
        <p class="text-center"><%= @cocktail.instructions %></p>
      </ul>
    </div>
  </div>
</div>
