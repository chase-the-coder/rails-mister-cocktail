<div class="cocktail-index-background">
  <div class="index-container text-center">
    <div class="text-center">
    <h1>
      <span id="banner-typed-text" class="western"></span>
    </h1>
    </div>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="categories-cards m-4">
          <%= link_to cocktail_path(cocktail) do %>
            <div class="card-shadow card-restaurant card-grow">
              <% if cocktail.thumbnail.present? %>
                <%= image_tag(cocktail.thumbnail) %>
              <% elsif cocktail.photo.key.present? %>
                  <%= cl_image_tag(cocktail.photo.key) %>
              <% end %>
              <div class="card-restaurant-infos text-center">
                <div>
                  <h2><%= truncate cocktail.name, length: 25, separator: /\w+/ %></h2>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
