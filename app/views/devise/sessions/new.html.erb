<html>
<body class="background">
  <div>
    <div class="d-flex justify-content-center">
      <div class="description-login border text-center white m-4 container">
        <div class="text-left">
          <%= link_to "<i class='fas fa-arrow-left text-left white pl-4'></i>".html_safe, root_path%>
        </div>
        <h2 class="western">Log in</h2>
        <div class="row">
          <div class="col-sm-4"></div>
          <div class="col-sm-4">
            <div class="form-inputs">
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%= f.input :email,
                              required: false,
                              autofocus: true,
                              input_html: { autocomplete: "email" } %>
                  <%= f.input :password,
                              required: false,
                              input_html: { autocomplete: "current-password" } %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
                <div class="form-actions">
                  <%= f.button :submit, "Log in", class: "btn btn-outline-light"  %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-sm-4"></div>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</body>
</html>
